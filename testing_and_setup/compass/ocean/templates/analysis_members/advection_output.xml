<template>
	<namelist>
		<option name="config_use_debugTracers">.false.</option>
		<option name="config_use_activeTracers_surface_restoring">.false.</option>
		<option name="config_adv_first_direction">'horizontal'</option>
		<option name="config_activeTracer_vert_limiter">'standard_FCT'</option>
	</namelist>

	<streams>
		<stream name="advectionOutput">
			<attribute name="runtime_format">single_file</attribute>
			<attribute name="name">advectionOutput</attribute>
			<attribute name="filename_interval">01-00-00_00:00:00</attribute>
			<attribute name="clobber_mode">truncate</attribute>
			<attribute name="reference_time">0001-01-01_00:00:00</attribute>
			<attribute name="output_interval">00-00-00_01:00:00</attribute>
			<attribute name="filename_template">analysis_members/advectionOutput.$Y-$M-$D.nc</attribute>
			<attribute name="type">output</attribute>
			<add_contents>
				<member name="xtime" type="var"/>
				<member name="tracerHorizontalFCTscaleFactor" type="var_array"/>
				<member name="tracerVerticalFCTscaleFactor" type="var_array"/>
			</add_contents>
		</stream>
	</streams>
</template>
